<div class="tit">
    <h2>Lista de Categorias</h2>
</div>
{{#each categorias}}
<div class="card col-md-8 mt-2 offset-2">
    <div class="card-body row">
        <h3>{{nome}}</h3>
        <h4>{{slug}}</h4>

        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-primary mt-2"> Editar </button></a>
        <a href="/admin/categorias/edit"><button class="btn btn-danger mt-2"> Deletar </button></a>
   
    </div>

</div>

{{else}}

{{/each }}
<a href="/admin/categorias/add"><button class="btn btn-success col-md-5 mt-2 offset-4"> Cadastro </button></a>
    