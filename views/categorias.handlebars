<div class="tit">
    <h2>Lista de Categorias</h2>
</div>
{{#each categorias}}
<div class="card col-md-8 mt-2 offset-2">
    <div class="card-body row">
        <h3>{{nome}}</h3>
        <h4>{{slug}}</h4>

        <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-primary mt-2"> Editar </button></a>
        <form action="/admin/categorias/del" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-2"> Deletar </button>
        </form>

    </div>

</div>

{{else}}

{{/each }}
<a href="/admin/categorias/add"><button class="btn btn-success col-md-5 mt-2 offset-4"> Cadastro </button></a>
    