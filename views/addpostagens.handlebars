{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}

<div class="card col-md-8 offset-2 mt-4">
    <h2 >Formulario</h2>
    <div class="card-body">
        <form action="/admin/postagens/add/new" method="POST">
            <label for="titulo">titulo</label>
            <input type="text" id="titulo" name="titulo" class="form-control">
            
            <label for="slug">Slug</label>
            <input type="text" id="slug" name="slug"  class="form-control">
            
            <label for="descricao">Descricao</label>
            <input type="text" id="descricao" name="descricao"  class="form-control">
            
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" id="conteudo" cols="30" rows="10" class="form-control"></textarea>



            <label for="categorias">Categorias</label>
            <select name="categorias" >
                {{#each categorias}}

                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="">Valor nao encontrado</option>
                {{/each}}   
            </select> 
            <br>
            <button class="btn btn-primary mt-2" type="submit">Criar Postagens</button>

        </form>
    </div>
</div>  

