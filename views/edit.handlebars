<div class="card col-md-8 offset-2 mt-4">
    <h2 >Categorias</h2>

    <div class="card-body">
        <form action="/admin/categorias/edit" method="POST">
            <input type="hidden" name="id" value="{{categorias._id}}">
            <label for="titulo">Nome:</label>

            <input type="text" id="nome" name="nome" value="{{categorias.nome}}" class="form-control">
            
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" value="{{categorias.slug}}"  class="form-control">
            <br>
            <button type="submit" class="btn btn-primary" > Editar </button> 
            



    </div>
</div>  

